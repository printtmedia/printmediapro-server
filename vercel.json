{
  "version": 2,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/test",
      "methods": ["GET", "OPTIONS"],
      "dest": "api/test.js"
    },
    {
      "src": "/api/send-order",
      "methods": ["POST", "OPTIONS"],
      "dest": "api/send-order.js"
    },
    {
      "src": "/favicon\\.(ico|png)",
      "dest": "api/root.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/root.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, *" }
      ]
    }
  ]
}